{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      "#app/*": ["./front/01-app/*"],
      "#processes/*": ["./front/02-processes/*"],
      "#pages/*": ["./front/03-pages/*"],
      "#widgets/*": ["./front/04-widgets/*"],
      "#features/*": ["./front/05-features/*"],
      "#entities/*": ["./front/06-entities/*"],
      "#shared/*": ["./front/07-shared/*"],

      "shared/*": ["./shared/*"],
      "front/*": ["./front/*"],
      "bibles/*": ["./bibles/*"]
    }
  },
  "include": ["src", "src/shared/utils/complect", "./node_modules/cypress", "cypress/**/*.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["src/front/07-shared/ui/the-icon/icons"]
}
