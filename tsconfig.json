{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "types": ["vite-plugin-pwa/info.d.ts", "vite-plugin-pwa/client.d.ts"],
    "paths": {
      "#shared/*": ["./front/shared/*"],
      "#features/*": ["./front/features/*"],
      "#widgets/*": ["./front/widgets/*"],
      "#basis/*": ["./front/basis/*"],

      "$cm+editor/app/*": ["./front/apps/cm+editor/01-app/*"],
      "$cm+editor/processes/*": ["./front/apps/cm+editor/02-processes/*"],
      "$cm+editor/pages/*": ["./front/apps/cm+editor/03-pages/*"],
      "$cm+editor/widgets/*": ["./front/apps/cm+editor/04-widgets/*"],
      "$cm+editor/features/*": ["./front/apps/cm+editor/05-features/*"],
      "$cm+editor/entities/*": ["./front/apps/cm+editor/06-entities/*"],
      "$cm+editor/shared/*": ["./front/apps/cm+editor/07-shared/*"],
      "$cm+editor/*": ["./front/apps/cm+editor/*"],

      "$cm/app/*": ["./front/apps/cm/01-app/*"],
      "$cm/processes/*": ["./front/apps/cm/02-processes/*"],
      "$cm/pages/*": ["./front/apps/cm/03-pages/*"],
      "$cm/widgets/*": ["./front/apps/cm/04-widgets/*"],
      "$cm/features/*": ["./front/apps/cm/05-features/*"],
      "$cm/entities/*": ["./front/apps/cm/06-entities/*"],
      "$cm/shared/*": ["./front/apps/cm/07-shared/*"],
      "$cm/*": ["./front/apps/cm/*"],

      "$bible/app/*": ["./front/components/apps/bible/01-app/*"],
      "$bible/processes/*": ["./front/components/apps/bible/02-processes/*"],
      "$bible/pages/*": ["./front/components/apps/bible/03-pages/*"],
      "$bible/widgets/*": ["./front/components/apps/bible/04-widgets/*"],
      "$bible/features/*": ["./front/components/apps/bible/05-features/*"],
      "$bible/entities/*": ["./front/components/apps/bible/06-entities/*"],
      "$bible/basis/*": ["./front/components/apps/bible/07-basis/*"],
      "$bible/*": ["./front/components/apps/bible/*"],

      "$q/app/*": ["./front/components/apps/q/01-app/*"],
      "$q/processes/*": ["./front/components/apps/q/02-processes/*"],
      "$q/pages/*": ["./front/components/apps/q/03-pages/*"],
      "$q/widgets/*": ["./front/components/apps/q/04-widgets/*"],
      "$q/features/*": ["./front/components/apps/q/05-features/*"],
      "$q/entities/*": ["./front/components/apps/q/06-entities/*"],
      "$q/basis/*": ["./front/components/apps/q/07-basis/*"],
      "$q/*": ["./front/components/apps/q/*"],

      "$tuner/*": ["./front/apps/tuner/*"],

      "$index/*": ["./front/components/index/*"],
      "$app/*": ["./front/app/*"],

      "shared/*": ["./shared/*"],
      "front/*": ["./front/*"],
      "back/*": ["./back/*"],
      "bibles/*": ["./bibles/*"]
    }
  },
  "include": ["src", "cypress/**/*.ts", "regexpert.gen"],
  "exclude": ["**/*.*js"]
}
